@model H_project1.Models.AccessData.Hoby
@{
    ViewBag.Title = "Hobbies";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
@section style{
    <link rel="stylesheet" href="~/Content/sweetalert2/sweetalert2.min.css">
}




<div class="header-spacer header-spacer-small"></div>

<!-- Main Header Account -->
<div class="main-header" style="width: 100% !important; max-width: 100%">
    <div class="content-bg-wrap bg-account"></div>
    <div class="container-fluid">
        <div class="row">
            <div class="col col-lg-8 m-auto col-md-8 col-sm-12 col-12">
                <div class="main-header-content">
                    <h1>Your Account Dashboard</h1>
                    <p>
                        Welcome to your account dashboard! Here you’ll find everything you need to change your profile
                        information, settings, read notifications and requests, view your latest messages, change your pasword and much
                        more!, have fun!
                    </p>
                </div>
            </div>
        </div>
    </div>
    <img class="img-bottom" src="/content/assets/img/account-bottom.png" alt="friends">
</div>

<!-- ... end Main Header Account -->
<!-- Your Account Personal Information -->

<div class="container">
    <div class="row">
        <div class="col col-xl-9 order-xl-2 col-lg-9 order-lg-2 col-md-12 order-md-1 col-sm-12 col-12">
            <div class="ui-block">
                <div class="ui-block-title">
                    <h6 class="title">Hobbies and Interests</h6>
                </div>
                <div class="ui-block-content">


                    <!-- Form Hobbies and Interests -->
                    @if (Model != null)
                    {
                        <div>
                            <div class="row">

                                <div class="col col-lg-6 col-md-6 col-sm-12 col-12">
                                    <div class="form-group label-floating">
                                        <label class="control-label">Hobbies</label>
                                        <textarea class="form-control" id="Hobbies" placeholder="">@Model.Hobbies </textarea>
                                    </div>
                                    <div class="form-group label-floating">
                                        <label class="control-label">Favourite TV Shows</label>
                                        <textarea class="form-control" id="favorite_tvshow">@Model.favorite_tvshow</textarea>
                                    </div>
                                    <div class="form-group label-floating">
                                        <label class="control-label">Favourite Movies</label>
                                        <textarea class="form-control" id="favorite_movie">@Model.favorite_movie </textarea>
                                    </div>
                                  

                                    <button class="btn btn-secondary btn-lg full-width" type="reset">Cancel</button>
                                </div>

                                <div class="col col-lg-6 col-md-6 col-sm-12 col-12">
                                    <div class="form-group label-floating">
                                        <label class="control-label">Favourite Music Bands / Artists</label>
                                        <textarea class="form-control" id="favorite_music">@Model.favorite_music</textarea>
                                    </div>
                                    <div class="form-group label-floating">
                                        <label class="control-label">Favourite Books</label>
                                        <textarea class="form-control" id="favorite_book">@Model.favorite_book</textarea>
                                    </div>
                                    <div class="form-group label-floating">
                                        <label class="control-label">Favourite Writers</label>
                                        <textarea class="form-control" id="favorite_writers">@Model.favorite_writers</textarea>
                                    </div>
                                

                                    <button class="btn btn-primary btn-lg full-width" type="button" onclick="SaveHobbies()">Save all Changes</button>
                                </div>

                            </div>
                        </div>
                    }
                    else
                    {
                        <div>
                            <div class="row">

                                <div class="col col-lg-6 col-md-6 col-sm-12 col-12">
                                    <div class="form-group label-floating">
                                        <label class="control-label">Hobbies</label>
                                        <textarea class="form-control" id="Hobbies" ></textarea>
                                    </div>
                                    <div class="form-group label-floating">
                                        <label class="control-label">Favourite TV Shows</label>
                                        <textarea class="form-control" id="favorite_tvshow"></textarea>
                                    </div>
                                    <div class="form-group label-floating">
                                        <label class="control-label">Favourite Movies</label>
                                        <textarea class="form-control" id="favorite_movie"> </textarea>
                                    </div>


                                    <button class="btn btn-secondary btn-lg full-width" type="reset">Cancel</button>
                                </div>

                                <div class="col col-lg-6 col-md-6 col-sm-12 col-12">
                                    <div class="form-group label-floating">
                                        <label class="control-label">Favourite Music Bands / Artists</label>
                                        <textarea class="form-control" id="favorite_music"></textarea>
                                    </div>
                                    <div class="form-group label-floating">
                                        <label class="control-label">Favourite Books</label>
                                        <textarea class="form-control" id="favorite_book"></textarea>
                                    </div>
                                    <div class="form-group label-floating">
                                        <label class="control-label">Favourite Writers</label>
                                        <textarea class="form-control" id="favorite_writers"></textarea>
                                    </div>


                                    <button class="btn btn-primary btn-lg full-width" type="button" onclick="SaveHobbies()">Save all Changes</button>
                                </div>

                            </div>
                        </div>
                    }
                   

                    <!-- ... end Form Hobbies and Interests -->

                </div>
            </div>
        </div>

        <div class="col col-xl-3 order-xl-1 col-lg-3 order-lg-1 col-md-12 order-md-2 col-sm-12  responsive-display-none">
            <div class="ui-block">



                <!-- Your Profile  -->

                <div class="your-profile">
                    <div class="ui-block-title ui-block-title-small">
                        <h6 class="title">Your PROFILE</h6>
                    </div>

                    <div id="accordion" role="tablist" aria-multiselectable="true">
                        <div class="card">
                            <div class="card-header" role="tab" id="headingOne">
                                <h6 class="mb-0">
                                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                        Profile Settings
                                        <svg class="olymp-dropdown-arrow-icon"><use xlink:href="svg-icons/sprites/icons.svg#olymp-dropdown-arrow-icon"></use></svg>
                                    </a>
                                </h6>
                            </div>

                            <div id="collapseOne" class="collapse show" role="tabpanel" aria-labelledby="headingOne">
                                <ul class="your-profile-menu">
                                    <li>
                                        <a href="/User/EditProfile">Personal Information</a>
                                    </li>

                                    <li>
                                        <a href="/User/ChangePassword">Change Password</a>
                                    </li>
                                    <li>
                                        <a href="/User/Hobbies">Hobbies and Interests</a>
                                    </li>
                                    <li>
                                        <a href="/User/EducationAndEmployement">Education and Employement</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="ui-block-title">
                        <a href="/User/Notifications" class="h6 title">Notifications</a>
                        <a href="#" class="items-round-little bg-primary" id="notificationNum"></a>
                    </div>

                    <div class="ui-block-title">
                        <a href="/User/FriendsRequests" class="h6 title">Friend Requests</a>
                        <a href="#" class="items-round-little bg-blue" id="frnum"></a>
                    </div>

                </div>

                <!-- ... end Your Profile  -->


            </div>
        </div>
    </div>
</div>

<!-- ... end Your Account Personal Information -->
@section script{
    <script src="~/Content/sweetalert2/sweetalert2.min.js"></script>

    <script>
        function SaveHobbies() {
            $.ajax({
                url: '/User/Hobbies',
                type: 'POST',
                datatype: 'json',
                data: { Hobbies: Hobbies.value, favorite_tvshow: favorite_tvshow.value, favorite_movie: favorite_movie.value, favorite_music: favorite_music.value, favorite_book: favorite_book.value, favorite_writers: favorite_writers.value }


            }).done(function (data) {

                if(data)
                {
                    swal({
                        type: 'success',
                        title: 'Your Profile Updated',
                        html: 'Your Profile Updated'
                    })
                }
                else
                {
                    swal({
                        type: 'error',
                        title: 'Error',
                        html: 'Change did not saved '
                    })
                }

            });
        }
    </script>



}
